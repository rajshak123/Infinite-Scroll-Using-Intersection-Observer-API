{
    "parser": "@babel/eslint-parser",
    "plugins": [
      "react",
      "jest",
      "testing-library",
      "jest-dom"
    ],
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "globals": {
      "define": true,
      "expect": false,
      "jest": false,
      "document": true,
      "browser": true,
      "React": true,
      "module": true,
      "require": true,
      "IG": true,
      "cy": true,
      "Cypress": true,
      "jsdom": true,
      "__isBrowser__": true
    },
    "env": {
      "jest": true,
      "es6": true,
      "browser": true,
      "node": true
    },
    "rules": {
      "react/jsx-no-bind": 0,
      "react/jsx-filename-extension": 0,
      "no-magic-numbers": [
        "error",
        {
          "detectObjects": false,
          "ignore": [
            -1,
            0,
            1,
            2
          ],
          "ignoreArrayIndexes": true
        }
      ],
      "newline-per-chained-call": 0
    }
  }